{
    "description": "This packer file builds a base centos VM",
	
	"builders": [
		{
		"type": "virtualbox-iso",
		"headless" : "false",	
		"boot_command": [
				"<wait><esc><esc>",
				"linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
		],
		"communicator": "ssh",
		"guest_additions_mode": "attach",
		"guest_os_type": "RedHat_64",
		"disk_size": "10240",
		"iso_checksum": "0ca12fe5f28c2ceed4f4084b41ff8a0b",
		"iso_checksum_type": "md5",
		"iso_url" : "file:///Users/boscor/ISO's/CentOS-6.8-x86_64-minimal.iso",
		"http_directory" : "/Users/boscor/tmp",
		"http_port_min" : 9001,
		"http_port_max" : 9001,
		"ssh_password": "vagrant",
		"ssh_username": "vagrant",
		"ssh_wait_timeout": "45m",
		"shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
		}
	],
	
	"post-processors": [
		{
		   "type": "vagrant",
		   "only": ["virtualbox-iso"]
		}
	]
}
